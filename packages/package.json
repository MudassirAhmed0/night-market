{
    "name": "night-market",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "scripts": {
      "dev": "pnpm -C apps/frontend dev",
      "dev:fe": "pnpm -C apps/frontend dev",
      "dev:be": "pnpm -C apps/backend start:dev",
      "build": "pnpm -C apps/frontend build && pnpm -C apps/backend build",
      "build:fe": "pnpm -C apps/frontend build",
      "build:be": "pnpm -C apps/backend build",
      "lint": "eslint .",
      "format": "prettier --write .",
      "typecheck": "tsc -p tsconfig.base.json --noEmit"
    },
    "devDependencies": {
      "@types/node": "^20.11.30",
      "eslint": "^9.0.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-import": "^2.29.1",
      "eslint-plugin-unused-imports": "^3.2.0",
      "prettier": "^3.3.3",
      "typescript": "^5.6.2"
    }
  }
  